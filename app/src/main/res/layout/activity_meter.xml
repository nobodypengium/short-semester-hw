<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#339999">

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/chart1"
        android:background="#339999"
        android:layout_width="match_parent"
        android:layout_height="320dp"/>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chart1"
        android:orientation="horizontal">

        <com.nsx.cnwinchart.dashboardview.view.DashboardView
            android:id="@+id/dashboardViewT"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:centerCircleColor="@color/colorPrimary"
            app:endProgressColor="@color/colorPrimaryDark"
            app:progressStrokeWidth="10dp"
            app:startNumber="0"
            app:startProgressColor="#00CCFF"
            app:tikeStrColor="#FFFFFF"
            app:tikeStrSize="10dp" />

        <com.nsx.cnwinchart.dashboardview.view.DashboardView
            android:id="@+id/dashboardViewC"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:centerCircleColor="@color/colorPrimary"
            app:endProgressColor="@color/colorPrimaryDark"
            app:progressStrokeWidth="10dp"
            app:startNumber="0"
            app:startProgressColor="@color/colorAccent"
            app:tikeStrColor="#FFFFFF"
            app:tikeStrSize="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go"
        android:textColor="#FFFFFF"
        android:background="#339999"
        android:layout_below="@+id/linearlayout" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/button" />

</RelativeLayout>
